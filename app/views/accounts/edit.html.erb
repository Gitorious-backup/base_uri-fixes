<h1>Edit your account</h1>
<%= error_messages_for :user -%>

<% form_for @user, :url => account_path do |f| -%>
  <p>
    <%= f.label :email -%><br />
    <%= f.text_field :email, :class => "text" -%>
  </p>   
  <p>
    <%= f.label :fullname, "Realname" -%><br />
    <%= f.text_field :fullname, :class => "text" -%>
  </p>
  <p>
    <%= f.label :url, "url <small>blog etc</small>" -%><br />
    <%= f.text_field :url, :class => "text" -%>
  </p>
  <p>
    <%= f.label :url, "OpenID" -%><br />
    <%= f.text_field :identity_url, :class => "text" -%>
  </p>
  <%= f.submit "Save" -%>
<% end -%>

<% content_for :submenu do -%>
  <li><%= link_to "My account", account_path -%></li>
  <li><%= link_to "Change password", password_account_path -%></li>
<% end -%>