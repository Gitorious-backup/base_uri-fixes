<h1><%= t("views.account.edit_title") %></h1>
<%= error_messages_for :user -%>

<% form_for @user, :url => update_password_account_path, :method => :put do |f| -%>
  <% unless @user.is_openid_only? %>
    <p>
      <%= f.label :current_password, t(:current_password, :scope => 'activerecord.attributes.user')  -%><br />
      <%= f.password_field :current_password, :class => "text" -%>
    </p>
  <% end %>
  <p>
    <%= f.label :password, t("views.account.new_passwd") -%><br />
    <%= f.password_field :password, :class => "text" -%>
  </p>   
  <p>    
    <%= f.label :password_confirmation, t("views.account.new_passwd_conf") -%><br />
    <%= f.password_field :password_confirmation, :class => "text" -%>
  </p>
  <%= f.submit t("views.account.chg_passwd") -%>
<% end -%>

<% content_for :submenu do -%>
  <li><%= link_to t("views.account.my_account"), account_path -%></li>
  <li><%= link_to t("views.account.edit_details"), edit_account_path -%></li>
  <li><%= link_to t('views.account.license'), account_license_path %></li>
<% end -%>