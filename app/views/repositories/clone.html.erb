<h1><%= t("views.repos.create_title").call(self, @repository_to_clone, @owner) %></h1>

<%= error_messages_for :repository -%>

<% form_for @repository, :repository, 
      :url => create_clone_project_repository_path(@owner, @repository_to_clone) do |f| -%>
  <p>
    <%= f.label :owner, t("views.repos.owner") -%>:
    <br />
    Me: <%= f.radio_button :owner_type, "User" -%>
    Group: <%= f.radio_button :owner_type, "Group" -%>
    <%= f.select :owner_id, current_user.groups.map{|g| [g.name, g.id] }, {},
                  :id => "repository_owner_id_group_select" -%>
    
    <p class="hint">Clone the repository as either yourself or a group you're in</p>
  </p>
  <p>
    <%= f.label :name, t("views.repos.name", :name => current_user.login) -%>:<br />
    <%= f.text_field :name, :class => "text" -%>
  </p>
  <%= f.submit t("views.repos.btn_clone") -%>
<% end -%>

<p><%= t("views.repos.clone_note") %></p>

<% content_for :submenu do -%>
  <li><%= link_to t("views.repos.back"), [@owner, @repository_to_clone] -%>
<% end -%>
