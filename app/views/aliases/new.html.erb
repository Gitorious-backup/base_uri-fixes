<% @page_title = t("views.aliases.new_alias") -%>
<%= breadcrumbs_from(@root) -%>

<h1><%= t("views.aliases.new_alias") -%></h1>

<%= error_messages_for :email -%>
<% form_for(@email, :url => user_aliases_path(@user)) do |f| -%>
  <p>
    <%= f.label :address -%>:
    <%= f.text_field :address -%>
  </p>
  
  <p class="hint">
    You will be sent an email asking you to confirm this email after it has 
    been created.
  </p>
  
  <p><%= f.submit("Add alias") -%> or <%= link_to "go back", user_aliases_path(@user) -%></p>
<% end -%>
