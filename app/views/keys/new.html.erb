<h1><%= t("views.keys.add_title") %></h1>

<%= error_messages_for :ssh_key -%>

<% content_for :submenu do -%>
  <%= render :partial => "site/breadcrumbs", :locals => {:root => current_user} -%>
<% end -%>

<% form_for @ssh_key, :url => user_keys_path() do |f| -%>
  <p>
    <%= f.label :key, t("views.keys.your_public_key") -%><br />
    <small class="hint"><%= t("views.keys.hint") %></small><br />
    <%= f.text_area :key, :class => "text medium" -%>
  </p>
  <%= f.submit t("views.common.save") -%>
<% end -%>

