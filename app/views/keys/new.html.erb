<h1>Add a new public SSH key</h1>

<%= error_messages_for :ssh_key -%>

<% form_for @ssh_key, :url => account_key_path(@ssh_key) do |f| -%>
  <p>
    <%= f.label :key, "Your public key" -%><br />
    <small class="hint">It's generally located in ~/.ssh/id_rsa.pub or 
      ~/.ssh/id_dsa.pub.<br />
      If you want to use multiple keys you'll have to add each of them seperately</small><br />
    <%= f.text_area :key, :class => "text medium" -%>
  </p>
  <%= f.submit "Save" -%>
<% end -%>

<% content_for :sidebar do -%>
  <ul class="links">
    <li><%= link_to "&#x2190; My account", account_path -%></li>
  </ul>
<% end -%>