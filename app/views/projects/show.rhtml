<h1><%= @project.title -%></h1>
<p><%= @project.description -%></p>

<h2>Associated repositories</h2>
<ul>
  <% @repositories.each do |repos| -%>
  <li><%= link_to repos.name, project_repository_path(@project, repos) -%></li>
  <% end -%>
</ul>


<% content_for :sidebar do -%>
  <% if @project.user == current_user -%>
    <p><%= link_to "edit this project", edit_project_path(@project) -%></p>
    <p><%= link_to "Add repository" -%></p>
  <% end -%>
<% end -%>