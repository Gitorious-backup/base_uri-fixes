<h1><%= @project.title -%></h1>
<p><%= @project.description -%></p>

<h2>Associated repositories</h2>
<ul class="repository_list">
  <% @repositories.each do |repos| -%>
  <% if repos.mainline? -%>
    <li class="mainline"><strong>Mainline:</strong> 
  <% else -%>
    <li>
  <% end -%>
    <%= render :partial => repos, :object => repos, :locals => {:project => @project} -%></li>
  
  <% end -%>
</ul>


<% content_for :sidebar do -%>
  <% if @project.user == current_user -%>
    <p><%= link_to "edit this project", edit_project_path(@project) -%></p>
    <p><%= link_to "Add repository", new_project_repository_path(@project) -%></p>
  <% end -%>
<% end -%>