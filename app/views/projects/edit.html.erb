<h1>Update <%= link_to h(@project.title), project_path(@project) -%></h1>

<%= error_messages_for :project -%>
<% form_for(@project) do |f| -%>
  <%= render :partial => "form", :locals => {:form => f} -%>
  <%= f.submit "Update" -%>
<% end -%>

<% content_for :submenu do -%>
  <li class="selected"><%= link_to "Edit project", edit_project_path(@project) -%>)</li>
<% end -%>