
<h1>Create a new project</h1>
<%= error_messages_for :project -%>

<% form_for :project, :url => projects_path do |f| -%>
  <p>
    <%= f.label :title -%><br />
    <%= f.text_field :title, :class => "text" -%>
  </p>
  <p>
    <%= f.label :description -%><br />
    <%= f.text_area :description, :class => "text" -%>
  </p>
  
  <%= f.submit "Save" -%>
<% end -%>