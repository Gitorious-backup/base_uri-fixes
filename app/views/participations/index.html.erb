<h1>
  <%= t("views.participations.title", :repo_name => @repository.name)  -%>
</h1>

<table class="listing tree">
	<tr>
		<th><%= t(:created_at, :scope => "activerecord.attributes.participations").humanize %></th>
		<th><%= t(:group, :scope => "activerecord.attributes.participations").humanize %></th>
		<th><%= t(:creator, :scope => "activerecord.attributes.participations").humanize %></th>
		<th></th>
	</tr>
	<% @participations.each do |participation| -%>
	<tr>
	  <td><%= participation.created_at.to_s(:short) -%></td>
	  <td><%= link_to h(participation.group.name), participation.group -%></td>
	  <td><%= link_to(h(participation.creator.login), participation.creator) if participation.creator -%>
	  <td><%= button_to(t("views.common.delete"), [@owner, @repository, participation], :method => :delete) -%></td>
	</tr>
	<% end -%>
</table>

<%= will_paginate @participations -%>

<p>
  <strong><%= link_to t("views.participations.add_new"), [:new, @owner, @repository, :participation] -%> </strong>
</p>
<p>
  <%= t("views.participations.return_to") -%> <%= link_to h(@repository.name), [@owner, @repository] -%>
</p>